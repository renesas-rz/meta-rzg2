+  for (i = 0; i< NUM_BUF; i++) {
+    buffer = &bayerconvert->buffer[i];
+    mmngr = &buffer->mmngr_buf;
+    mmngr->mmngr_id = -1;
+    mmngr->dmabuf_id = -1;
+    mmngr->dmabuf_fd = -1;
+  }
