From bd7974b2ca382cc165d3937858d490859661413a Mon Sep 17 00:00:00 2001
From: Hien Huynh <hien.huynh.px@renesas.com>
Date: Wed, 5 Aug 2020 13:50:02 +0700
Subject: [PATCH 334/357] arm64: dts: renesas: r8a774a3: Add IPMMU device nodes

Add r8a774a3 IPMMU nodes and set "disabled" state by default.

Signed-off-by: Hien Huynh <hien.huynh.px@renesas.com>
---
 arch/arm64/boot/dts/renesas/r8a774a3.dtsi | 46 +++++++++++++++++++++++++------
 1 file changed, 37 insertions(+), 9 deletions(-)

diff --git a/arch/arm64/boot/dts/renesas/r8a774a3.dtsi b/arch/arm64/boot/dts/renesas/r8a774a3.dtsi
index 0d7465c..21f0dc0 100644
--- a/arch/arm64/boot/dts/renesas/r8a774a3.dtsi
+++ b/arch/arm64/boot/dts/renesas/r8a774a3.dtsi
@@ -1044,57 +1044,85 @@
 		};
 
 		ipmmu_ds0: mmu@e6740000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xe6740000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 0>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		ipmmu_ds1: mmu@e7740000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xe7740000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 1>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		ipmmu_hc: mmu@e6570000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xe6570000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 2>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		ipmmu_mm: mmu@e67b0000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xe67b0000 0 0x1000>;
+			interrupts =	<GIC_SPI 196 IRQ_TYPE_LEVEL_HIGH>,
+					<GIC_SPI 197 IRQ_TYPE_LEVEL_HIGH>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		ipmmu_mp: mmu@ec670000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xec670000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 4>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
+			status = "disabled";
 			#iommu-cells = <1>;
-			/* placeholder */
 		};
 
 		ipmmu_pv0: mmu@fd800000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xfd800000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 5>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		ipmmu_pv1: mmu@fd950000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xfd950000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 6>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		ipmmu_vc0: mmu@fe6b0000 {
+			compatible = "renesas,ipmmu-mmu-r8a774a3";
 			reg = <0 0xfe6b0000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 8>;
+			power-domains = <&sysc R8A774A3_PD_A3VC>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		ipmmu_vi0: mmu@febd0000 {
+			compatible = "renesas,ipmmu-r8a774a3";
 			reg = <0 0xfebd0000 0 0x1000>;
+			renesas,ipmmu-main = <&ipmmu_mm 9>;
+			power-domains = <&sysc R8A774A3_PD_ALWAYS_ON>;
 			#iommu-cells = <1>;
-			/* placeholder */
+			status = "disabled";
 		};
 
 		avb: ethernet@e6800000 {
