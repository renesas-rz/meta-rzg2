+			resets = <&cpg 623>;
+
+			renesas,fcp = <&fcpvd0>;
 		};
 
 		fcpvd0: fcp@fea27000 {
@@ -1113,8 +1172,14 @@
 		};
 
 		vspd1: vsp@fea28000 {
+			compatible = "renesas,vsp2";
 			reg = <0 0xfea28000 0 0x4000>;
-			/* placeholder */
+			interrupts = <GIC_SPI 467 IRQ_TYPE_LEVEL_HIGH>;
+			clocks = <&cpg CPG_MOD 622>;
+			power-domains = <&sysc R8A774B1_PD_ALWAYS_ON>;
+			resets = <&cpg 622>;
+
+			renesas,fcp = <&fcpvd1>;
 		};
 
 		fcpvd1: fcp@fea2f000 {
@@ -1125,11 +1190,6 @@
 			resets = <&cpg 602>;
 		};
 
-		vspd2: vsp@fea30000 {
-			reg = <0 0xfea30000 0 0x4000>;
